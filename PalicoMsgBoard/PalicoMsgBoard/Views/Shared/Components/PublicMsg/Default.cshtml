<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">
                Recent Public Messages
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Message m in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => m.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => m.Text)
                </td>
            </tr>
        }
    </tbody>
</table>